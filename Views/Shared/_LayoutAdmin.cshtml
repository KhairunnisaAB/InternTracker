    <script>
        function cekExt(input) {
            var file = input.files[0];
            var valid = true;

            if (file.size / 1024 > 5120) {
                Swal.fire({
                    icon: 'error',
                    title: 'Opps!',
                    text: 'Berkas file terlalu besar! Ukuran maksimal berkas yang bisa dikirim adalah 5 MB'
                });
                valid = false;
            }

            var extension = file.name.split('.').pop().toLowerCase();
            var allowedExtensions = ["jpg", "png", "jpeg"];

            if (!allowedExtensions.includes(extension)) {
                Swal.fire({
                    icon: 'error',
                    title: 'Opps!',
                    text: 'Format berkas yang dibolehkan adalah .jpg, .png, atau .jpeg'
                });
                valid = false;
            }

            if (valid) {
                var img = new Image();
                img.onload = function () {
                    var width = img.width;
                    var height = img.height;
                    var aspectRatio = width / height;
                    if (Math.abs(aspectRatio - (3 / 2)) > 0.01 && Math.abs(aspectRatio - (4 / 3)) > 0.01) {
                        Swal.fire({
                            icon: 'error',
                            title: 'Opps!',
                            text: 'Ukuran gambar harus memiliki rasio 3:2 hingga 4:3'
                        });
                        input.value = "";
                    }

                };
                img.src = URL.createObjectURL(file);
            } else {
                input.value = "";
            }
        }



